// Configurações personalizadas do VS Code
// Download das fonts: 
// MesloLGS: https://github.com/romkatv/dotfiles-public/blob/master/.local/share/fonts/NerdFonts/MesloLGS%20NF%20Bold.ttf
// Fira Code: https://rafaelgeronimo.com/fonts/

{
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "newUntitledFile",
    "explorer.compactFolders": false,
    "editor.renderLineHighlight": "gutter",
    "workbench.editor.labelFormat": "short",
    "typescript.updateImportsOnFileMove.enabled": "always",

    // Fonte do terminal
    "terminal.integrated.fontFamily": "MesloLGS NF, Bold",
    
    // Configuração de tamanho e família da fonte
    "editor.tabSize": 2,
    "editor.fontSize": 13,
    "editor.lineHeight": 20,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,

    "editor.parameterHints.enabled": false,
    "editor.rulers": [100, 130],

    "emmet.syntaxProfiles": { "javascript": "jsx" },
    "emmet.includeLanguages": { "javascript": "javascriptreact" },
}
